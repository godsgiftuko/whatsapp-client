<script>

    $(document).ready(function () {
        const socketIo = io();

        const img = $("#qrcode-image");

        socketIo.on("qr_Created", (socket) => {
            //console.log(socket)
            //img.show().attr('src', 'data:image/png;base64,' + socket.src)
        });

        socketIo.on("qr_Updated", (socket) => {
            $('.spinner-wrapper').addClass('d-none');
            console.log(socket)

            img.show().attr('src', 'data:image/png;base64,' + socket.src)
        });

        socketIo.on("success", (socket) => {
            console.log(socket)
            setTimeout(() => {
                window.location.href = socket.url;
            }, socket.timer);
            $(".wrapper2-bottom").show();
            //$(".wrapper-info").addClass("d-flex");
        });


    });
